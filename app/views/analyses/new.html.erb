<div class="max-w-2xl mx-auto">
  <div class="mb-8 border-b border-green-800 pb-4">
    <h1 class="text-3xl font-bold tracking-widest text-green-400 uppercase">
      > INICIAR_PROTOCOLO_VARREDURA
    </h1>
    <p class="text-sm text-green-700 mt-2 animate-pulse">
      // Sistema pronto. Aguardando input do usuário...
    </p>
  </div>

  <nav class="mb-6 text-sm">
    <ul class="flex space-x-4">
      <li>
        <%= link_to root_path, class: "text-green-300 hover:text-white border-b-2 border-green-500 pb-1" do %>
          [ ./nova_analise ]
        <% end %>
      </li>
      <li>
        <%= link_to analyses_path, class: "text-green-700 hover:text-green-400 hover:underline transition-colors" do %>
          [ ./historico_logs ]
        <% end %>
      </li>
    </ul>
  </nav>

  <% if flash[:alert] %>
    <div class="mb-6 border border-red-500 bg-red-900/20 text-red-400 p-4 rounded font-bold">
      [ERRO CRÍTICO]: <%= flash[:alert] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="mb-6 border border-green-500 bg-green-900/20 text-green-400 p-4 rounded">
      [SUCESSO]: <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="bg-black/50 border border-green-600/50 p-8 rounded-lg shadow-[0_0_20px_rgba(34,197,94,0.1)] backdrop-blur-sm">
    <%= form_with(model: @analysis, url: analyses_path, method: :post, class: "space-y-6") do |form| %>
      
      <div class="space-y-2">
        <%= form.label :file, "SELECIONAR_ALVO:", class: "block text-xs font-bold text-green-600 uppercase tracking-widest" %>
        
        <div class="relative group">
          <%= form.file_field :file, required: true, 
              class: "block w-full text-sm text-green-400
                      file:mr-4 file:py-2.5 file:px-4
                      file:rounded-none file:border-0
                      file:text-sm file:font-semibold
                      file:bg-green-900 file:text-green-400
                      file:cursor-pointer hover:file:bg-green-800
                      border border-green-800 bg-slate-900/50 
                      rounded focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500
                      cursor-pointer transition-all" %>
        </div>
        <p class="text-xs text-green-800 mt-1">* Apenas arquivos binários autorizados.</p>
      </div>

      <div class="pt-4 border-t border-green-900/50">
        <%= form.submit "EXECUTAR ANÁLISE >>", 
            class: "w-full py-3 px-6 bg-green-700 hover:bg-green-600 
                    text-black font-bold uppercase tracking-widest 
                    shadow-[0_0_15px_rgba(34,197,94,0.4)] hover:shadow-[0_0_25px_rgba(34,197,94,0.6)]
                    transition-all duration-300 cursor-pointer border border-green-500" %>
      </div>

    <% end %>
  </div>

  <footer class="mt-12 text-center text-xs text-green-900">
    SECURE CONNECTION ESTABLISHED_
  </footer>
</div>